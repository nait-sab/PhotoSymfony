{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <style>
        img {
            width: 100%;
            height: 100%;
            position: relative;
            margin: 0;
            top: 30%;
        }

        #contenu {
            margin-top: 5%;
        }

        #btnDelete {
            background-color: #ff6e20;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        #btnDelete:hover {
            background-color: #ffa470;
        }
    </style>

    <img src="{{ path('afficher_image', {nom: nom}) }}" />
    <div id="contenu">
        <h1>Auteur : {{ auteur }}</h1>
        {% if showDelete %}
        <a href="{{ path('delete_image', {id: id}) }}" id="btnDelete">Supprimer</a>
        {% endif %}
    </div>
{% endblock %}
