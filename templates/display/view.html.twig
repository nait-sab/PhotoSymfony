{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <style>
        img {
            width: 100%;
            height: 100%;
            position: relative;
            margin: 0;
            top: 30%;
        }

        #contenu {
            margin-top: 5%;
        }

        .btn {
            background-color: #ff6e20;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #c14908;
        }

        #zonePublique {
            margin-top: 10px;
        }
    </style>

    <img src="{{ path('afficher_image', {nom: nom}) }}" />
    <div id="contenu">
        <h1>Auteur : {{ auteur }}</h1>

        {% if proprietaire %}
            <div id="zonePublique">
                <h2>Visibilité : <a class="btn" href="{{ path('visibility_image', {id: id}) }}">

                {% if public %}
                        Cliquer pour rendre privée
                {% else %}
                        Cliquer pour rendre publique
                {% endif %}

                </a><a href="{{ path('delete_image', {id: id}) }}" class="btn">Supprimer</a></h2>
            </div>
        {% endif %}

    </div>
{% endblock %}
